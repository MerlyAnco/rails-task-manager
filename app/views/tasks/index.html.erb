<div class="container mt-5">
  <h1>Tasks</h1>
  <% @tasks.each do |task| %>
  <div class="form-check">
    <input class="form-check-input" type="checkbox" <%= 'checked' if task.completed %>>
    <label class="form-check-label" for="flexCheckDefault">
      <%= link_to task_path(task) do %>
        <%= task.title %>
      <% end %>
    </label>
    <%= link_to task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
        <i class="fa-solid fa-trash ms-2"></i>
    <% end %>
  </div>
  <% end %>
  <hr/>
  <%= link_to new_task_path do %>
  <i class="fa-solid fa-plus me-2"></i>
  Add new task
  <% end %>
</div>
