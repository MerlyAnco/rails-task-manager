<%= form_with model: @task, class: "mt-4" do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :details, class: "form-label" %>
    <%= f.text_field :details, class: "form-control" %>
  </div>
  <% if @task.persisted? %>
    <div class="mb-3 form-check">
      <%= f.check_box :completed, class: "form-check-input" %>
      <%= f.label :completed, "Completed", class: "form-check-label" %>
    </div>
  <% end %>
  <%= f.submit "Save changes", class: "btn btn-primary mb-3" %>
<% end %>

<%= link_to "Back to list", tasks_path %>
