<div class="container mt-5">
  <div class="d-flex align-items-center justify-content-between">
    <h1><%= @task.title %></h1>
    <%= link_to edit_task_path(@task), class: "btn btn-primary" do %>
      Edit this task
    <% end %>
  </div>
  <p class="p-4 alert alert-secondary my-3"><%= @task.details%></p>
  <div class="form-check">
      <input class="form-check-input" type="checkbox" <%= 'checked' if @task.completed %> id="flexCheckDefault">
      <% if @task.completed %>
        <label class="form-check-label" for="flexCheckDefault">
          this task is completed!
        </label>
      <% else %>
        <label class="form-check-label" for="flexCheckDefault">
          This task is not completed yet
        </label>
      <% end %>
    </div>
    <hr/>
  <%= link_to tasks_path do %>
      Back to list
  <% end %>
</div>
